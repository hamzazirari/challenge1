#include <stdio.h>

int main() {
    int n, i;
    printf("Entrer un nombre positif: ");
    scanf("%d", &n);

    if (n < 0) {
        printf("Impossible ! Entrer un nombre positif.\n");
        return 1;
    }
    int fact = 1;
    for (i = 1; i <= n; i++) {
        fact = fact * i;
    }
    printf("Le factoriel de %d est %d\n", n, fact);

    return 0;
}
