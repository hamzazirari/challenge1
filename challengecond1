#include<stdio.h>
  int main(){
    int Revenu_annuel,Score_de_credit,Duree_du_pret;
    printf("entrer le revenu_annuel en euro");
    scanf("%d",&Revenu_annuel);

    printf("entrer le Score_de_credit");
    scanf("%d",&Score_de_credit); 

    printf("entrer le Duree_du_pret");
    scanf("%d",&Duree_du_pret);

    if(Revenu_annuel>=30000 && Score_de_credit>=700 && Duree_du_pret<=10){
        printf("Éligible");

    }
    else if(Revenu_annuel>=30000 && Score_de_credit>=650 && Duree_du_pret<=15){
        printf("Éligible avec conditions");

    }
    else if(Revenu_annuel<30000 && Score_de_credit<650 && Duree_du_pret>15){
        printf("Non éligible");

    }
    return 0;
    
}